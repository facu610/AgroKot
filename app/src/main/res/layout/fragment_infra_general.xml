<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.InfraGeneralFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:columnCount="4"
        app:useDefaultMargins="true"
        app:orientation="horizontal"
        app:rowCount="8">

        <CheckBox
            android:id="@+id/cb_FInfra_Gral_CumpRec"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content"
            android:text="Cumple Recomendaciones?"
            app:layout_columnSpan="4"/>



        <CheckBox
            android:id="@+id/cb_FInfra_Gral_Galpon"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content"
            android:text="Posee Galpón?"
            app:layout_columnSpan="2"/>
        <TextView
            android:ems="7"
            android:text="Galpón m3"
            android:gravity="right"
            app:layout_columnSpan="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/primaryTextColor"/>
        <EditText
            android:id="@+id/et_FInfra_Gral_m3Galpon"
            android:ems="4"
            app:layout_columnSpan="1"
            android:textColor="@color/primaryTextColor"
            android:inputType="number"/>



        <TextView
            android:ems="6"
            android:text="Total Cañas"
            android:gravity="left"
            app:layout_columnSpan="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/primaryTextColor"/>
        <EditText
            android:id="@+id/et_FInfra_Gral_TotCañas"
            android:ems="4"
            app:layout_columnSpan="2"
            android:textColor="@color/primaryTextColor"
            android:inputType="number"/>



        <TextView
            android:ems="6"
            android:text="Has/Estufas"
            android:gravity="left"
            app:layout_columnSpan="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/primaryTextColor"/>

        <EditText
            android:id="@+id/et_FInfra_Gral_HasEst"
            android:ems="4"
            android:inputType="number"
            android:textColor="@color/primaryTextColor" />



        <TextView
            android:ems="7"
            android:text="Observaciones: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/primaryTextColor"
            app:layout_columnSpan="4"/>



        <EditText
            android:id="@+id/et_FInfra_Gral_Obs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            android:textColorHint="@color/primaryTextColor"
            android:hint="Escriba aquí..."
            app:layout_columnSpan="4"
            android:inputType="text" />

        <Button
            android:id="@+id/b_FInfra_Gral_Guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryTextColor"
            android:textSize="25sp"
            android:layout_marginTop="100dp"
            android:padding="25dp"
            android:textAllCaps="false"
            app:layout_columnSpan="4"
            app:layout_gravity="bottom"
            android:text="Guardar"
            />

        <TextView
            android:layout_width="wrap_content"
            app:layout_columnSpan="4"
            app:layout_gravity="center|bottom"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            android:text=" Departamento de Sistemas - Co.Pro.Tab - 2018"
            android:drawableLeft="@drawable/logoiconoapp40"
            />


    </android.support.v7.widget.GridLayout>


</LinearLayout>