<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context=".Actividades.MainActivity">

    <TextView
        android:id="@+id/tv_Instr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/muestrainstructor" />

    <TextView
        android:id="@+id/tv_Zona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/muestrazona" />

    <Button
        android:id="@+id/b_Fichas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fichas" />

    <Button
        android:id="@+id/b_Sincronizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sincronizar" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>