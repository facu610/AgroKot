<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Actividades.SincronizacionActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_act_sincro"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:titleTextColor="@color/secondaryTextColor" />

    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primaryColor"
        android:indeterminate="true"
        android:elevation="4dp"
        android:minHeight="40dp"
        android:indeterminateTint="@color/primaryLightColor"
        android:max="100"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_Sincro_ToSincro"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:padding="10dp"
        android:text=""
       android:textSize="20dp"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />



    <Button
        android:id="@+id/b_PruebaConex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:background="@drawable/button_border"
        android:textColor="@color/primaryColor"
        android:text="Establecer ConexiÃ³n"/>

    <Button
        android:id="@+id/b_SincroFichas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryTextColor"
        android:textSize="20sp"
        android:padding="20dp"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="Sincronizar Fichas"/>
    <Button
        android:id="@+id/b_NoSincroFichas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        android:visibility="invisible"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="No existen fichas a sincronizar"/>

    <Button
        android:id="@+id/b_SincroInstr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        android:visibility="gone"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="Sincronizar Complementarios"/>

    <Button
        android:id="@+id/b_SincroSocios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="Sincronizar Socios"/>




</LinearLayout>